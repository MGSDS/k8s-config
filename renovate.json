{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "fileMatch": ["clusters/proxmox-home/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchManagers": ["kubernetes"],
      "matchDepTypes": ["image"],
      "matchPackageNames": ["sissbruecker/linkding"],
      "versioning": "docker"
    }
  ]
}